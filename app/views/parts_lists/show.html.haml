.wrapper
  .header
    = render "header"

  = render 'layouts/notifications'

  .main
    .contents
      .show-top
        = form_with(model: @parts_list,
          local: true,
          url: user_parts_list_path(current_user.id),
          class: "show-top__form") do |f|

          .show-top__form__list-box
            %p.show-top__form__list-box__label 追加するリスト
            = f.select :list_id, @lists.map { |parts_list| [parts_list.name, parts_list.id] }, selected: params[:list_id], id: "top-select", class: "show-top__form__list-box__checkbox"
          .show-top__form__btn
            #switchArea
              %input#choose_list{name: "choose_list", type: "checkbox", checked: "checked"}
              %label{for: "choose_list"}
                %span
              #swImg
            = f.submit id: "line-up-button",class: "show-top__form__btn__add-btn", value: "リスト追加", "data-disable-with":"リスト追加"
      .shows
        .show{ data: {list_up_id: 0}}
          .partslists__show
            .partslists__show__box
              .partslists__content__title__list-name
                = link_to @parts_list.name, user_parts_list_path(current_user.id, @parts_list.id)
          - if get_cpu(@parts_list.cpu_id) || true
            .show-list
              .show-list__head
                .show-title= "CPU"
              .show-list__head
                .show-image= image_tag "#{get_cpu(@parts_list.cpu_id).try(:image)}", size: "120x120", alt: "No Image", class: "td-image"
                .show-image-name-box
                  .show-image-name-content= get_cpu(@parts_list.cpu_id).try(:name)
              .show-list__head
                .show-key-box
                  .show-key-content メーカー
                .show-value-box
                  .show-value-content= get_cpu(@parts_list.cpu_id).try(:brand)
              .show-list__head
                .show-key-box
                  .show-key-content プロセッサー
                .show-value-box
                  .show-value-content= get_cpu(@parts_list.cpu_id).try(:processor)
              .show-list__head
                .show-key-box
                  .show-key-content ソケット形状
                .show-value-box
                  .show-value-content= get_cpu(@parts_list.cpu_id).try(:socket)

