.content
  .content-top
    - if user_signed_in?
      = f.submit name: hdd.id, class: "add-btn", value: "リストに追加", "data-disable-with":"リストに追加"
    .content-clearbox
  .show-list
    .show-list__head
      .show-image= image_tag "#{hdd.try(:image)}", size: "120x120", alt: "No Image", class: "td-image"
      .show-image-name-box
        .show-image-name-content= hdd.try(:name)
    .show-list__head
      .show-key-box
        .show-key-content メーカー
      .show-value-box
        .show-value-content= hdd.try(:brand)
    .show-list__head
      .show-key-box
        .show-key-content シリーズ
      .show-value-box
        .show-value-content= hdd.try(:series)
    .show-list__head
      .show-key-box
        .show-key-content 容量
      .show-value-box
        .show-value-content= hdd.try(:capacity)
    .show-list__head
      .show-key-box
        .show-key-content 回転数
      .show-value-box
        .show-value-content= hdd.try(:speed)
    .show-list__head
      .show-key-box
        .show-key-content インターフェイス
      .show-value-box
        .show-value-content= hdd.try(:interface1)
    .show-list__head
      .show-key-box
        .show-key-content インターフェイス
      .show-value-box
        .show-value-content= hdd.try(:interface2)
    .show-list__head
      .show-key-box
        .show-key-content キャッシュ
      .show-value-box
        .show-value-content= hdd.try(:cache)
