.content
  .content-top
    - if user_signed_in?
      = f.submit name: mb.id, class: "add-btn", value: "リストに追加", "data-disable-with":"リストに追加"
    .content-clearbox
  %table.parts__table
    %tr.parts__table__head__tr
      %th.th-5th.th-name= mb.name
      %th.th-5th メーカー
      %th.th-5th チップセット

    %tr.parts__table__body__tr
      %td{:rowspan => "3"}= image_tag "#{mb.image}", size: "120x120", alt: "No Image", class: "td-image"
      %td= mb.brand
      %td= mb.chipset


    %tr.parts__table__head__tr
      %th.th-5th フォームファクタ
      %th.th-5th ソケット形状

    %tr.parts__table__body__tr
      %td= mb.formfactor
      %td= mb.socket


