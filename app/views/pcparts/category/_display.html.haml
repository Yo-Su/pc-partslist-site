.content
  .content-top
    - if user_signed_in?
      = f.submit name: display.id, class: "add-btn", value: "リストに追加", "data-disable-with":"リストに追加"
    .content-clearbox
  .show-list
    .show-list__head
      .show-image= image_tag "#{display.try(:image)}", size: "120x120", alt: "No Image", class: "td-image"
      .show-image-name-box
        .show-image-name-content= display.try(:name)
    .show-list__head
      .show-key-box
        .show-key-content メーカー
      .show-value-box
        .show-value-content= display.try(:brand)
    .show-list__head
      .show-key-box
        .show-key-content モニタサイズ
      .show-value-box
        .show-value-content= display.try(:size)
    .show-list__head
      .show-key-box
        .show-key-content モニタタイプ
      .show-value-box
        .show-value-content= display.try(:monitortype)
    .show-list__head
      .show-key-box
        .show-key-content 表示領域
      .show-value-box
        .show-value-content= display.try(:area)
    .show-list__head
      .show-key-box
        .show-key-content コントラスト比
      .show-value-box
        .show-value-content= display.try(:contrast)

