.content
  .content-top
    - if user_signed_in?
      = f.submit name: cpu.id, class: "add-btn", value: "リストに追加", "data-disable-with":"リストに追加"
    .content-clearbox
  %table.parts__table
    %tr.parts__table__head__tr
      %th.th-5th.th-name= display.name
      %th.th-5th メーカー
      %th.th-5th モニタサイズ
      %th.th-5th モニタタイプ

    %tr.parts__table__body__tr
      %td{:rowspan => "3"}= image_tag "#{display.image}", size: "120x120", alt: "No Image", class: "td-image"
      %td= display.brand
      %td= display.size
      %td= display.monitortype

    %tr.parts__table__head__tr
      %th.th-5th 表示領域
      %th.th-5th コントラスト比

    %tr.parts__table__body__tr
      %td= display.area
      %td= display.contrast

