.content
  .content-top
    - if user_signed_in?
      = f.submit name: ssd.id, class: "add-btn", value: "リストに追加", "data-disable-with":"リストに追加"
    .content-clearbox
  .show-list
    .show-list__head
      .show-image= image_tag "#{ssd.try(:image)}", size: "120x120", alt: "No Image", class: "td-image"
      .show-image-name-box
        .show-image-name-content= ssd.try(:name)
    .show-list__head
      .show-key-box
        .show-key-content メーカー
      .show-value-box
        .show-value-content= ssd.try(:brand)
    .show-list__head
      .show-key-box
        .show-key-content 容量
      .show-value-box
        .show-value-content= ssd.try(:capacity)
    .show-list__head
      .show-key-box
        .show-key-content 規格サイズ
      .show-value-box
        .show-value-content= ssd.try(:size)
    .show-list__head
      .show-key-box
        .show-key-content インターフェイス
      .show-value-box
        .show-value-content= ssd.try(:interface)
    .show-list__head
      .show-key-box
        .show-key-content タイプ
      .show-value-box
        .show-value-content= ssd.try(:ssdtype)
