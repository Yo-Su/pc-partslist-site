.content
  = f.submit name: ssd.id, class: "add-btn", value: "リストに追加", "data-disable-with":"リストに追加"
  %table.parts__table
    %tr.parts__table__head__tr
      %th.th-5th.th-name= ssd.name
      %th.th-5th メーカー
      %th.th-5th 容量
      %th.th-5th 規格サイズ

    %tr.parts__table__body__tr
      %td{:rowspan => "3"}= image_tag "#{ssd.image}", size: "120x120", alt: "No Image", class: "td-image"
      %td= ssd.brand
      %td= ssd.capacity
      %td= ssd.size

    %tr.parts__table__head__tr
      %th.th-5th インターフェイス
      %th.th-5th タイプ

    %tr.parts__table__body__tr
      %td= ssd.interface
      %td= ssd.ssdtype

