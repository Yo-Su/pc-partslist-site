.wrapper
  .header
    = render "parts_lists/header"
  .main
    .side-bar
      .parts-list
        = link_to pcpart_path(1), class: "parts-list__category" do
          CPU
        = link_to pcpart_path(2), class: "parts-list__category" do
          マザーボード
        = link_to pcpart_path(3), class: "parts-list__category" do
          HDD
    .contents
      .contents-top
        .contents-top__name
          = "カテゴリー：#{@category.category}"
          -# = @category.id
          = link_to "データベース登録", "/pcparts/1/cpus", method: :post
        .contents-top__list
          -# = form_for(@parts_lists) do |f|
          = form_with(model: @parts_list, class: "contents-top__list__select") do |f|
            = f.label :lists do
              = "パーツリスト："
              = f.select :id, @parts_lists.map { |parts_list| parts_list.name }
            -# = f.submit
      .contents-main
        - case @category.id
        - when 1
          = render partial: "pcparts/category/cpu", collection: @cpus
